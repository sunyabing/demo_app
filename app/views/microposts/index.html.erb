<h1>微薄列表</h1>

<table border="1">
  <tr>
    <th>内容</th>
    <th>用户ID</th>
    <th>操作</th>
  </tr>

<% @microposts.each do |micropost| %>
  <tr>
    <td style="width:50%"><%= micropost.content %></td>
    <td style="width:10%; text-align:center "><%= micropost.user_id %></td>
    <td style="width:40% "><%= link_to '浏览', micropost %>
        <%= link_to '编辑', edit_micropost_path(micropost) %>
        <%= link_to '删除', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

